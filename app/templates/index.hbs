<header class="page-header">
    <h1>Latest Listings</h1>
</header>

<ul class="listings">
    {{#each listing in controller}}
        <li class="listings-item">
        {{#link-to 'listing' listing class="listing"}}
                <div class="listing-image">
                    <img src="/assets/images/default-image.jpg">
                </div>
                <div class="listing-name">
                    <h3>{{listing.name}}</h3>
                </div>
                <div class="listing-price">
                    &euro;{{listing.price}}
                </div>
        {{/link-to}}
        </li>
    {{/each}}
</ul>
